<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor">

    <LinearLayout
        android:id="@+id/sctitlevar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/mainColor"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/exitBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="╳"
            android:textColor="@color/mainColorWhite"
            android:textSize="19.2sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="스크립트 등록"
            android:textColor="@color/mainColorWhite"
            android:textSize="19.2sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/mainColorWhite"
            android:textSize="16.2sp"
            android:textStyle="bold" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/kp_next_prev_btn"
        app:layout_constraintTop_toBottomOf="@+id/sctitlevar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_script"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스크립트"
                    android:textColor="@color/mainColorWhite"
                    android:textSize="15.8sp" />

                <Button
                    android:id="@+id/speech_to_text_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="음성으로 입력"
                    android:textSize="13.8sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/script_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="발표시 사용할 발표 대본을 입력해주세요."
                android:lines="8"
                android:maxLines="10"
                android:minLines="1"
                android:textColor="@color/mainColorWhite"
                android:textColorHint="#fefeff"
                android:textSize="14.5sp"
                />

            <TextView
                android:id="@+id/start_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="시작"
                android:textColor="@color/mainColorWhite"
                android:textSize="15.8sp" />

            <LinearLayout
                android:id="@+id/script_StartTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <NumberPicker
                    android:id="@+id/start_picker_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1" />

                <NumberPicker
                    android:id="@+id/start_picker_minute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1" />

                <NumberPicker
                    android:id="@+id/start_picker_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <TextView
                android:id="@+id/end_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="종료"
                android:textColor="@color/mainColorWhite"
                android:textSize="15.8sp" />

            <LinearLayout
                android:layout_marginBottom="44dp"
                android:id="@+id/script_EndTimePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <NumberPicker
                    android:id="@+id/end_picker_hour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1" />

                <NumberPicker
                    android:id="@+id/end_picker_minute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1" />

                <NumberPicker
                    android:id="@+id/end_picker_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/kp_next_prev_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/popup_btn"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/sc_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="확인"
            android:textColor="@color/mainColor"
            android:textSize="17.6sp"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
