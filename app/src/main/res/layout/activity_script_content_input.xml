<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor">

    <LinearLayout
        android:id="@+id/sctitlevar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@color/mainColor"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/exitBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="╳"
            android:textColor="@color/mainColorWhite"
            android:textSize="19.2sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="스크립트 등록"
            android:textColor="@color/mainColorWhite"
            android:textSize="19.2sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/mainColorWhite"
            android:textSize="16.2sp"
            android:textStyle="bold" />
    </LinearLayout>


    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/kp_next_prev_btn"
        app:layout_constraintTop_toBottomOf="@+id/sctitlevar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="21dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_script"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="스크립트"
                    android:textColor="@color/mainColorWhite"
                    android:textSize="15.8sp" />

                <ImageButton
                    android:id="@+id/speech_to_text_btn"
                    android:layout_width="103.5dp"
                    android:layout_height="28.5dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/inputvoice"
                    android:adjustViewBounds="true"
                    android:textSize="13.8sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/script_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="발표시 사용할 발표 대본을 입력해주세요."
                android:lines="8"
                android:maxLines="10"
                android:minLines="1"
                android:textColor="@color/mainColorWhite"
                android:textColorHint="#fefeff"
                android:textSize="14.5sp"
                />
            <TextView
                android:layout_marginTop="38dp"
                android:id="@+id/start_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시작"
                android:textSize="13.8sp"
                android:textColor="@color/mainColorWhite"
                />


            <RelativeLayout
                android:id="@+id/timePickerStart"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView">

                <RelativeLayout
                    android:id="@+id/relative1"
                    android:layout_marginTop="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ffffff"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_height="2dp"
                        android:background="#ffffff"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/mainColorWhite"
                        android:gravity="center"
                        android:text="시간"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/mainColorWhite"
                        android:gravity="center"
                        android:text="분"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/mainColorWhite"
                        android:gravity="center"
                        android:text="초"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="45dp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|left"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|left"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|left"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />

                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/number_pickers_start"
                    android:layout_marginTop="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <NumberPicker
                        android:id="@+id/picker_hour_start"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerText2"
                        android:fadeScrollbars="false"
                        />
                    <NumberPicker
                        android:id="@+id/picker_minute_start"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerText2"
                        android:fadeScrollbars="false"
                        />
                    <NumberPicker
                        android:id="@+id/picker_second_start"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerText2"
                        android:fadeScrollbars="false"
                        />
                </LinearLayout>
            </RelativeLayout>



            <TextView
                android:textSize="13.8sp"
                android:layout_marginTop="30dp"
                android:id="@+id/end_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="종료"
                android:textColor="@color/mainColorWhite"
                />













            <RelativeLayout
                android:id="@+id/timePickerEnd"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView">

                <RelativeLayout
                    android:id="@+id/relative2"
                    android:layout_marginTop="45dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="180dp" >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#ffffff"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:layout_height="2dp"
                        android:background="#ffffff"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/mainColorWhite"
                        android:gravity="center"
                        android:text="시간"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/mainColorWhite"
                        android:gravity="center"
                        android:text="분"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/mainColorWhite"
                        android:gravity="center"
                        android:text="초"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_marginTop="45dp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|left"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|left"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|right"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            />
                        <TextView
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:textColor="@color/mainColorLight"
                            android:gravity="center_vertical|left"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:text=":"
                            />
                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/number_pickers_end"
                    android:layout_marginTop="45dp"
                    android:layout_marginBottom="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <NumberPicker
                        android:id="@+id/picker_hour_end"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerText2"
                        android:fadeScrollbars="false"
                        />
                    <NumberPicker
                        android:id="@+id/picker_minute_end"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerText2"
                        android:fadeScrollbars="false"
                        />
                    <NumberPicker
                        android:id="@+id/picker_second_end"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:theme="@style/NumberPickerText2"
                        android:fadeScrollbars="false"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/upper_shadow_todo"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent" />
    <LinearLayout
        android:id="@+id/kp_next_prev_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/popup_btn"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">


        <TextView
            android:id="@+id/sc_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="확인"
            android:textColor="@color/mainColor"
            android:textSize="17.6sp"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
