<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor">

    <LinearLayout
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:id="@+id/kptitlevar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mainColor"
        >

        <TextView
            android:id="@+id/exitBtn"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="╳"
            android:textColor="@color/mainColorWhite"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="키포인트 등록"
            android:textColor="@color/mainColorWhite"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/mainColorWhite"
            android:textSize="9pt"
            android:textStyle="bold" />
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="30dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/kptitlevar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/text_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="키포인트 내용"
            android:textColor="@color/mainColorWhite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <EditText

            android:textColorHint="#fefeff"
            android:id="@+id/keypoint_content"
            android:textSize="15dp"
            android:hint="키포인트를 나타내는 내용을 입력해주세요."
            app:layout_constraintTop_toBottomOf="@+id/text_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

        <LinearLayout
            android:id="@+id/keypoint_timePicker"
            android:layout_marginTop="38dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/keypoint_content">

            <NumberPicker
                android:id="@+id/key_picker_hour"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                />
            <NumberPicker
                android:id="@+id/key_picker_minute"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                />
            <NumberPicker
                android:id="@+id/key_picker_second"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/kp_next_prev_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/popup_btn"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/kpt_ok_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="확인"
            android:textColor="@color/mainColor"
            android:textSize="8pt"
            android:textStyle="bold" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
