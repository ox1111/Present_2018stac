<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/AppTheme">

    <ImageView
        android:id="@+id/MainLogo"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:src="@drawable/mainlogo2" />

    <ImageView
        android:id="@+id/TextLogo"
        android:layout_width="62.3dp"
        android:layout_height="41.3dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/maintext"

        />

    <ImageView
        android:id="@+id/InforLogo"
        android:layout_width="104.3dp"
        android:layout_height="29dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/inforlogo" />

    <Button
        android:id="@+id/startPT"
        android:layout_width="143dp"
        android:layout_height="40dp"
        android:layout_marginTop="68.3dp"
        android:background="@drawable/main_btn"
        android:text="새 PT 시작하기"
        android:textColor="@color/mainColorWhite"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/PTlist"
        android:layout_width="143dp"
        android:layout_height="40dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/main_btn"
        android:text="기존 PT 목록"
        android:textColor="@color/mainColorWhite"
        android:textSize="14sp"
        android:textStyle="bold" />
</LinearLayout>
