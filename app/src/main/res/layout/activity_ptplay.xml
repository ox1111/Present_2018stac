<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ptplayBG"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/btn_destroy"
            android:paddingTop="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  ×"
            android:onClick="appFinish"
            android:textColor="@color/ptplayWhite"
            android:textSize="19pt"
            />
        <TextView
            android:id="@+id/pt_title"
            android:paddingTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STAC 본선"
            android:textColor="@color/ptplayWhite"
            android:gravity="center"
            android:textSize="20sp"
            />
        <!--<TextView-->
            <!--android:id="@+id/btn_lock"-->
            <!--android:layout_marginLeft="320dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="  잠금"-->
            <!--android:onClick="appFinish"-->
            <!--android:textColor="@color/bg_white"-->
            <!--android:textSize="35sp"-->
            <!--/>-->
    </RelativeLayout>
    <ImageButton
        android:id="@+id/btn_lock"
        android:layout_marginTop="40dp"
        android:layout_width="40dp"
        android:onClick="appFinish"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/lock_opened"
        android:background="@color/ptplayBG"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/sc_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="12pt"
        android:textColor="@color/ptplayWhite"
        android:text="스크립트 제목"
        android:textStyle="bold"
        />
    <TextView
        android:layout_marginTop="22dp"
        android:id="@+id/time_out"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="35pt"
        android:textColor="@color/ptplayWhite"
        android:text="00:00"
        android:textStyle="bold"
        />


    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/record"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:textSize="25sp"
        android:padding="10dp"
        android:textColor="@color/ptplayWhite"
        android:text="이곳에 스크립트가\n표시됩니다."
        android:layout_marginTop="20dp"
        />
<LinearLayout
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <Button
        android:layout_gravity="center"
        android:id="@+id/btn_start"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:textColor="@color/ptplayBG"
        android:onClick="myOnClick"
        android:background="@drawable/round_button1"
        android:textSize="18sp"
        android:text="시작"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        />

    <Button
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:id="@+id/btn_refresh"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:textColor="@color/ptplayBG"
        android:onClick="myOnClick"
        android:background="@drawable/round_button1"
        android:textSize="18sp"
        android:text="초기화"
        android:textStyle="bold"
        />

</LinearLayout>


</LinearLayout>
