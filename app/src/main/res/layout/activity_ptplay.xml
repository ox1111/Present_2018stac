<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ptplayBG"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/title_layout"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/btn_destroy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="appFinish"
        android:paddingTop="0dp"
        android:text="  ×"
        android:textColor="@color/ptplayWhite"
        android:textSize="19pt" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="15dp"
        android:text="STAC 본선"
        android:textColor="@color/ptplayWhite"
        android:textSize="10pt" />
</LinearLayout>

    <TextView

        android:id="@+id/time_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="00:00"
        android:textColor="@color/ptplayWhite"
        android:textSize="35pt"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="STAC 발표\nPRE-SENT"
        android:textColor="@color/ptplayWhite"
        android:textSize="15pt" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button1"
        android:onClick="myOnClick"
        android:text="시작"
        android:textColor="@color/ptplayBG"
        android:textSize="9pt"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button1"
        android:onClick="myOnClick"
        android:text="초기화"
        android:textColor="@color/ptplayBG"
        android:textSize="9pt"
        android:textStyle="bold" />


</android.support.constraint.ConstraintLayout>
